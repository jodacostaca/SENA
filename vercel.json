{
  "version": 2,
  "builds": [
    { "src": "frontend/public/**/*",     "use": "@vercel/static" },
    { "src": "frontend/views/**/*.html", "use": "@vercel/static" }
  ],
  "routes": [

    { "src": "/css/(.*)",    "dest": "frontend/public/css/$1" },
    { "src": "/js/(.*)",     "dest": "frontend/public/js/$1" },
    { "src": "/images/(.*)", "dest": "frontend/public/images/$1" },


    { "src": "/",              "dest": "frontend/views/index.html" },
    { "src": "/login",         "dest": "frontend/views/auth/login.html" },
    { "src": "/registro",      "dest": "frontend/views/auth/registro.html" },
    { "src": "/student/panel", "dest": "frontend/views/student/estudiante_panel.html" },

  
    { "src": "/api/(.*)",      "dest": "https://mellow-mindfulness.up.railway.app/$1" }
  ]
}